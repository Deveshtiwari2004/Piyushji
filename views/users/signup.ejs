<% layout("/layouts/boilerplate") %>

<h1 class="col-6 offset-3">Signup on Wanderlust</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
    

     <form method="POST" action ="/signup" novalidate class="needs-validation" novalidate>
       <div class="mb-3">
        <label for="username"form-label">Username</label></lable>
       <input name="username" id="username" type="text" class="form-control" required>
       <div class="valid-feedback">looks good</div>
       </div>

        <div class="mb-3">
        <label for="email"form-label">Email</label></lable>
       <input name="email" id="email" type="text" class="form-control" required>
       <div class="valid-feedback">looks good</div>
       </div>

         <div class="mb-3">
        <label for="password"form-label">Password</label></lable>
       <input name="password" id="password" type="text" class="form-control" required>
       <div class="valid-feedback">looks good</div>
       </div>

       <div>
        <button class="btn btn-success">Signup</button>
       </div>


    
 
     </form>

  </div>
</div>